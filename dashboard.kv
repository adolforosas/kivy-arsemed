<Interface>:
    canvas.before:
		Color:
			rgba: (25/255, 36/255, 68/255, 1)
		Rectangle:
			pos: self.pos
			size: self.size

    orientation: "vertical"



    padding: [dp(5), dp(0), dp(5), dp(0)]
    spacing: dp(2)

    BoxLayout:
        orientation: "horizontal"
        size_hint: .97, 0.13
        padding: [5,10,30,10]
        Image:
            source: 'logo.png'  # Reemplaza con la ruta de tu logo
            #size_hint: None, None
            #size: 180,60  # Ajusta el tamaño como desees
            #size_hint: 0.5, 0.15
            #size: dp(60), dp(60)  # Ajusta el tamaño de tu logo
            #pos_hint: {'x': 0, 'top': 1}  # Coloca el logo en la esquina superior izquierda

        Label:
            id: etiqueta
            text: "Compras Públicas \n Equipo Médico"
            font_size: 30
            #size_hint: 0.8, 0.12
            canvas.before:
            #background_color: 25/255, 36/255, 68/255, 1  # Color de fondo (#192444)
            color: 224/255, 1, 1, 1
            text_size: self.width, None  # Establece el ancho del área de texto
            halign: 'left'  # Centrar horizontalmente
            valign: 'bottom'
            padding: [0, 0, 0, 0]
            #spacing: dp(50)

        Spinner:
            background_normal: ''
            background_color: 73/255, 116/255, 165/255, 1
            text: '2023'  # Establece el valor por defecto
            values: ['2021','2022', '2023']
            #padding: [0, 0, 0, 0]
            pos_hint: {'center_x': 0.2, 'top': 0.7}
            #font_size: 18
            size_hint: None, None
            size: 150, 80  # Ajusta el tamaño como desees
            on_text: root.actualizar_textos(self.text)
            DropDown:
                background_normal: ''
                background_color: 73/255, 116/255, 165/255, 1
                #background_color: 0.2, 0.8, 0.2, 1  # Color de fondo de la lista desplegable
                #border: 0, 0, 0, 0  # Elimina el borde de la lista desplegable
            #on_text: root.grafica_institucion()





    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1

        ScrollView:
            size_hint: 1, 0.4
            bar_width: 20
            scroll_timeout: 150
            scroll_type: ['bars','content']

            GridLayout:

                #id: botones
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10


                BoxLayout:
                    orientation: "horizontal"
                    padding:[0,0,10,0]
                    spacing: dp(5)  # Separación horizontal entre los cuadros de texto
                    size_hint_y: None
                    height: 120  # Ajusta la altura como desees
                    BoxLayout:
                        orientation: "vertical"
                        Button:
                            id: entrada1
                            background_normal: ''
                            background_color: 31/256, 44/256, 86/256, 1
                            color: 1, 0.647, 0, 1
                            #text: 'tres'
                            #size_hint: 1, 0.25
                            halign: 'center'

                    BoxLayout:
                        orientation: "vertical"
                        Button:
                            id: entrada2
                            #background_color: 0.8, 0.8, 0.2, 1  # Color amarillo
                            background_normal: ''
                            background_color: 31/256, 44/256, 86/256, 1
                            color: 1, 0.647, 0, 1
                            #text: 'cuatro'
                            #size_hint: 1, 0.25
                            halign: 'center'

                BoxLayout:
                    orientation: "horizontal"
                    padding:[0,0,10,0]
                    spacing: dp(5)  # Separación horizontal entre los cuadros de texto
                    size_hint_y: None
                    height: 120  # Ajusta la altura como desees
                    BoxLayout:
                        orientation: "vertical"
                        Button:
                            id: entrada3
                            #background_color: 0.2, 0.8, 0.2, 1  # Color verde
                            background_normal: ''
                            background_color: 31/256, 44/256, 86/256, 1
                            color: 1, 0.647, 0, 1
                            #text: "uno"
                            #size_hint: 1, 0.25
                            halign: 'center'

                    BoxLayout:
                        orientation: "vertical"
                        Button:
                            id: entrada4
                            #background_color: 0.8, 0.2, 0.2, 1  # Color rojo
                            background_normal: ''
                            background_color: 31/256, 44/256, 86/256, 1
                            color: 1, 0.647, 0, 1
                            #text: 'dos'
                            #size_hint: 1, 0.25
                            halign: 'center'


                BoxLayout:
                    canvas.before:
		                Color:
			                rgba: (31/256, 44/256, 86/256, 1)
                        Rectangle:
                            pos: self.x +0, self.y   # Ajusta los márgenes izquierdo y superior
                            size: self.width - 0, self.height # Ajusta el ancho y alto descontando los márgenes


